import pandas as pd
import spacy

nlp = spacy.load("en_core_web_sm")

content = '''
On March 5, 2022, Emily Johnson started working at Amazon Web Services in Seattle.
Her team handled 100 TB of IoT data to predict energy consumption patterns.
Within 6 months, accuracy improved by 15%, reaching 93%.
In October 2022, MIT collaborated to expand the system to Boston smart grids.
This project reduced electricity wastage by nearly 25%, benefiting 50,000 households.'''

doc = nlp(content)
for ent in doc.ents:
    print(ent.text, ent.start_char, ent.end_char, ent.label_)
from spacy import displacy
displacy.render(doc, style="ent")
entities = [(ent.text, ent.label_, ent.lemma_) for ent in doc.ents]
df = pd.DataFrame(entities, columns=['text', 'type', 'lemma'])
print(df)
